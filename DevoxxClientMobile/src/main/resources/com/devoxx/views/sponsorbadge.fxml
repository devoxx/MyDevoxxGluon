<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<View fx:id="sponsorView" styleClass="sponsor-view" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devoxx.views.SponsorBadgePresenter">
    <VBox fx:id="content" styleClass="content">
        <PasswordField fx:id="password" promptText="Password" onAction="#signIn"/>
        <Button fx:id="signIn" text="Sign In" onAction="#signIn"/>
        <Label fx:id="message" styleClass="data-label"/>
    </VBox>
</View>
